{
    "Logging": {
        "LogLevel": {
            "Default": "Warning",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Warning"
        }
    },
    "Serilog": {
        "Enrich": [ "FromLogContext" ],
        "MinimumLevel": "Warning",
        "WriteTo": [
            {
                "Name": "Async",
                "Args": {
                    "configure": [
                        { "Name": "Console" },
                        {
                            "Name": "File",
                            "Args": {
                                "path": "C:\\Logs\\log.txt",
                                "fileSizeLimitBytes": "100000",
                                "rollOnFileSizeLimit": "true",
                                "rollingInterval": "Day"
                            }
                        }
                    ]
                }
            }
        ]
    }
}